<h2>Sign up</h2>

{{>flashMessages}}

<form method="POST" action="/process-signup">
  <label for="fullName">
    Full name: 
    <input type="text" name="fullName" id="fullName" placeholder="Sophie Dupont">
  </label>
  <br>

<label for="email">
  Email:
  <input type="email" name="email" id="email" placeholder="sophie@dupont.com">
</label>
<br>

<label for="originalPassword">
  Password: 
  <input type="password" name="originalPassword" id="originalPassword" placeholder="******">
</label>
<br>

<button>Sign up</button>
</form>
