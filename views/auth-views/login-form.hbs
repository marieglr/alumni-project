<div class="loginPage centerflex">

  <div class="loginWrapper centerflex">

    <h2>Log In</h2>

    {{>flashMessages}}

    <form method="POST" action="/process-login" class="centerflex">


      <label for="email">
        <input type="email" name="email" placeholder="Email" class="input">
      </label>
    

      <label for="loginPassword">
        <input type="password" name="loginPassword" placeholder="******" class="input">
      </label>
    
      <br>
      

      <button>Log In</button>
    </form>

  </div>

</div>